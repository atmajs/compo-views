UTest({
	$before (next) {
		UTest
			.server
			.request('http://localhost:5777/examples/load/index.html')
			.done((doc, win) => {
				next(doc, win);
			});
	},
	'should load default view' (done, doc, win) {
		UTest
			.domtest(doc.body, `
				find ('.v-view') {
					length 1;
					text ('a2');
				}
			`)
			.always(() => done(doc, win));
	},
	'should load next view' (done, doc, win) {
		UTest
			.domtest(doc.body, `
				find ('.navigate > [data-route="?a1"]') {
					do click;
				}
				await('.v-view > b');
				find ('.v-view') {
					length 1;
					text ('a1');
				}
			`)
			.always(() => done(doc, win));
	},
	'should fail to load' (done, doc, win) {
		UTest
			.domtest(doc.body, `
				find ('.navigate > [data-route="?a3"]') {
					do click;
				}

				await(200);
				has text ('error');
			`)
			.always(() => done(doc, win));
	}

})