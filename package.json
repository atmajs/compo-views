{
  "name": "compo-views",
  "version": "0.10.48",
  "devDependencies": {
    "app-bundler": "0.0.93",
    "atma": ">0.15.17",
    "atma-io-middleware-importer": "^1.1.37",
    "atma-io-middleware-condcomments": "^1.2.8",
    "atma-loader-ts": "^1.1.12",
    "atma-server": "^0.5.19"
  },
  "scripts": {
    "test": "atma test",
    "examples": "node examples/node/index",
    "build": "app-bundler",
    "watch": "app-bundler --watch"
  },
  "app-bundler": {
    "file": "src/exports.ts",
    "outputMain": "lib/views.js",
    "package": {
      "module": "commonjs",
      "moduleWrapper": "custom",
      "moduleWrapperCustomPath": "./src/umd.js",
      "commonjs": {
        "output": "simplified"
      }
    },
    "extensions": {
      "io": {
        "type": "js"
      }
    },
    "defaultExtensions": {
      "js": "ts"
    },
    "middlewares": {
      "ts": [
        "atma-io-middleware-importer:read",
        "atma-io-middleware-condcomments:read",
        "atma-loader-ts:read"
      ]
    }
  },
  "atma": {
    "settings": {
      "include": {
        "amd": true,
        "extentionDefault": {
          "js": "ts"
        }
      },
      "atma-utest": {
        "include": {
          "amd": true
        }
      },
      "atma-loader-ts": {
        "extensions": [
          "test",
          "ts"
        ],
        "typescript": {
          "compilerOptions": {
            "#if (TEST)": {
              "module": "AMD"
            }
          }
        }
      }
    }
  },
  "peerDependencies": {
    "maskjs": ">0.54.5",
    "ruta": ">0.2.65"
  }
}
